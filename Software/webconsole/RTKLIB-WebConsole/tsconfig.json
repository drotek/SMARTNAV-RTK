{
    "compilerOptions": {
        "types": [
            "node"
        ],
        "outDir": "dist/app",
        "target": "es5",
        "module": "commonjs",
        "removeComments": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "declaration": true,
        //"importHelpers": true,
        "lib": [
            "es2015",
            "es2015.promise",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}